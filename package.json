{
  "name": "local-clipboard",
  "version": "1.0.0",
  "description": "app like universal clipboard by Apple.",
  "main": "server.js",
  "bin": "server.js",
  "scripts": {
    "start": "node server.js",
    "build:mac": "pkg . --targets node18-macos-x64,node18-macos-arm64 --output-path dist",
    "build:win": "pkg . --targets node18-windows-x64 --output-path dist",
    "build:all": "npm run build:mac && npm run build:win",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Vivek Patel",
  "license": "ISC",
  "dependencies": {
    "ejs": "^3.1.10",
    "express": "^5.2.1",
    "multer": "^2.0.2",
    "open": "^8.4.2",
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "pkg": {
    "assets": [
      "views/**/*"
    ],
    "scripts": [
      "server.js"
    ],
    "outputPath": "dist"
  }
}
